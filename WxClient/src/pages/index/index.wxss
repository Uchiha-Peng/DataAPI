scroll-view {
  width: 100%;
}

.slide-image {
  width: 100%;
  height: 400rpx;
}

.header {
  border-left: 2rpx solid #48c23d;
  margin: 20rpx 0;
  padding: 0 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* border: 1px solid #48c23d; */
}

.text-all {
  color: #48c23d;
  font-size: 14px;
  font-weight: bold;
}

.line {
  border-bottom: 20rpx #edeef2 solid;
}

.content {
  padding: 10rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
}

.content-item {
  width: 48%;
  height: 200rpx;
  align-self: center;
  margin: 1%;
  position: relative;
}

.content-item image {
  width: 100%;
  height: 100%;
}

.content-item-text {
  align-self: center;
  position: absolute;
  text-align: center;
  bottom: 0rpx;
  width: 100%;
  height: 50rpx;
  background: -webkit-linear-gradient(bottom, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.0));
}

.content-item text {
  font-size: 12px;
  color: aliceblue;
}

.list-item {
  width: 100%;
}

.list-item-images {
  width: 100%;
  position: relative;
}

.list-item-images-img {
  width: 100%;
}

.avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  position: absolute;
  bottom: -15rpx;
  right: 25rpx;
}

.list-item-text {
  padding: 30rpx;
}

.list-item-text-title text {
  margin: 20rpx 0;
  font-weight: bold;
  color: gray;
}

.list-item-text-content text {
  font-size: 12px;
  color: lightgray;
}

.margin {
  padding: 10px 0;
}
