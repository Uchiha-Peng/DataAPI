.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
  align-items: center; 
}

.imageBox{
  height: 300rpx;
  width:  300rpx;
  margin-bottom: 50rpx;
}

.logo{
  height: 100%;
  width: 100%;
  border-radius: 5rpx;
}

.inputArea{
width: 90%;
display: flex;
flex-flow: column wrap;
align-items: center;
}

.inputArea input{
background-color: #F8F8F8;
width: 95%;
padding-left: 5%;
height: 90rpx;
margin-top: 30rpx;
border-radius: 5px;
font-size: 14px;
}

.inputArea input:hover{
  background-color: #F1F1F1;
}

.btnGroup{
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-content: center;
}

.btnGroup button{
  width: 40%;
  background-color: #00B07D;
  color:white;
  margin:30rpx 0;
  height: 90rpx;
}


button.btnHover{
  background-color: #039b6f;
  box-shadow: 0px 0px 5px #00B07D;
}
