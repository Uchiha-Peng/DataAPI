.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: column nowrap;
  justify-content: flex-start;
  align-items: center;
}

.slider {
  width: 100%;
  height: 50%;
}

.swiperItem {
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
}

.slider image {
  width: 100%;
  height: 100%;
}

.slider-shadow {
  align-self: center;
  position: absolute;
  text-align: center;
  bottom: 0rpx;
  width: 100%;
  height: 50rpx;
  background: -webkit-linear-gradient(bottom, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.0));
}

.proInfo {
  width: 100%;
  height: auto;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  color: #999;
}

.ProSalesInfo {
  width: 100%;
  height: 129rpx;
  border-bottom: 1rpx solid #f1f1f1;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  color: #999;
}

.priceInfo {
  width: 96%;
  margin: 2% 0;
  height: 50%;
  color: #dd2727;
  font-size: 14px;
  font-weight: bold;
}

.AnotherInfo {
  width: 96%;
  margin: 2% 0;
  height: 50%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}

.proDesc {
  width: 100%;
  height: 150rpx;
  border-bottom: 20rpx solid #f1f1f1;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  color: #999;
}

.proNameTxt {
  width: 96%;
  margin: 2% 0;
  height: 25%;
  font-size: 14px;
  font-weight: bold;
  color: black;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: flex-start;
}

.proDescTxt {
  width: 96%;
  margin: 2% 0;
  height: 75%;
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
  align-items: flex-start;
}

.fixedButton {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
   display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  overflow: hidden; 
}

.btnLeft {
  width: 45%;
  height: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  overflow: hidden;
}

.btnLeft button {
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;  
  font-size: 10px;
}

.btnLeft image {
  width: 40rpx;
  height: 40rpx;
}

.btnRight {
  width: 55%;
  height: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  overflow: hidden;
}

.btnRight button {
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  font-size: 12px;
}

.btn{
  background-color: white;
  border: none;
  box-shadow: 0;
  border-radius: 0rpx 0rpx 0rpx 0rpx;
}
